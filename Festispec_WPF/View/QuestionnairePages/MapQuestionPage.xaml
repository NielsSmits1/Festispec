<Page x:Class="Festispec_WPF.View.QuestionnairePages.MapQuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec_WPF.View.QuestionnairePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MapQuestionPage">

    <StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Vraag:"></TextBlock>
            <TextBox Text="{}"/>
            <Image Width="150" Height="150" Source="{Binding Equipment.Picture, UpdateSourceTrigger=PropertyChanged}" ></Image>
            <Button Command="{Binding LoadImageCommand}" Width="300" Height="30">Load Afbeelding</Button>
            <Button Command="{}" Content="Submit vraag" Width="300" Height="30" Margin="0 50" />
        </StackPanel>

    </StackPanel>
</Page>
