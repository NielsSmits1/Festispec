<Page x:Class="Festispec_WPF.View.QuestionnairePages.MulitpleChoiceQuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec_WPF.View.QuestionnairePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MulitpleChoiceQuestionPage">

    <Border Margin="10 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Vraag:"/>
                <TextBox Text="vraag hier"/>

                <TextBlock Text="Vraag optie:" Margin="0 10 0 0"/>
                <TextBox Text="vraag optie hier"/>
                <Button Content="Submit vraag optie" Margin="0 10" />
            </StackPanel>
            <Button Grid.Column="0" Content="Submit vraag" VerticalAlignment="Bottom" />

            <DataGrid Grid.Column="1">
            </DataGrid>

        </Grid>
    </Border>
</Page>
