<div>
    <img class="logo" src="D:\Documents\Festispec\Festispec_WPF\Pdf\logo.png" />
    <div>
        Klant gegevens <br />
        @Model.CustomerName
    </div>
    <br />
    <div>
        Inspectie gegevens<br />
        @Model.InspectionTitle
    </div>
    <br />
    <div>
        Datum<br />
        @Model.Date
    </div>
    <br />
    <div>
        Introductie<br />
        <span style="white-space: pre-line">
            @Model.Introduction
        </span>
    </div>
    <br />
    <div>
        Samenvatting<br />
        <span style="white-space: pre-line">
            @Model.SummaryOfInspection
        </span>
    </div>
    <br />
    <div>
        Advies<br/>
        <span style="white-space: pre-line">
            @Model.Advice
        </span>
    </div>
    <br />
    <div>
        @foreach (var question in Model.Questions)
        {
            <div>
                Vraag: @question.QuestionTitle
            </div>
            <div>
                Antwoorden:<br />

                @if (question.Type == "Bijlage vraag" || question.Type == "Kaart vraag")
                {
                    foreach (var awnser in question.GivenAwnsers)
                    {
                        <img class="chart" src="@awnser" />
                        <br />
                    }
                }
                else if (question.Type == "Tabel vraag")
                {
                    <table cellpadding="10">
                        <thead>
                            <tr>
                                <th>@question.TabelHeadQuestion</th>
                                @for (var i = 1; i < question.TabelHeadCount; i++)
                                {
                                    <th>@question.TabelHeadAwnser</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < question.TabelHeaders.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @question.TabelHeaders.ElementAt(i)
                                    </td>

                                    @for (var j = 1; j < question.TabelHeadCount; j++)
                                    {
                                        <td>@question.getNext(i, j)</td>
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    foreach (var awnser in question.GivenAwnsers)
                    {
                        @awnser
                        <br />
                    }
                }
            </div>
            if (question._chart != "")
            {
            <div>
                Chart: <br />
                <img class="chart" src="@question.ChartHtml" />
            </div>
            }
            <br />
        }
    </div>
</div>
<style>
    .logo {
        float: right;
        width: 250px;
    }

    .chart{
        width: 300px;
        height: 300px;
    }
</style>
