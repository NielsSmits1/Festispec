@{
    ViewBag.Title = "Home Page";
}

<!-- Landing page information -->
<div class="jumbotron">
    <h1>FestiSpec</h1>
    <h2 class="">@ViewBag.Name</h2>
    <p class="lead">Houd jij van geld én van festivals? Overweeg een baan als inspecteur bij FestiSpec en verdien je geld op festivals!</p>
    <h4 class="btn-block">
        @Html.ActionLink("Aanmelden →", "Create", "Applicant")
